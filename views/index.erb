<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.author.name %></td>
        <td><%= book.price %></td>
        <td>
          <a class="btn btn-default btn-xs" href="/books/<%= book.id %>" role="button">Detail</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
